[Unit]
Description=Manages Virtual IP for Patroni
Documentation=https://github.com/cybertec-postgresql/vip-manager

[Service]
Type=simple
ExecStart=/usr/bin/vip-manager --config=/etc/vip-manager.yml
Restart=on-failure
RestartSec=10s

CPUQuota=10%
MemoryLimit=200M

[Install]
WantedBy=multi-user.target